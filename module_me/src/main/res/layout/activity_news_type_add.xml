<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.fly.tour.me.mvvm.viewmodel.NewsTypeAddViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/layout_setting_bar"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#FFFFFF"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/txt_set_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/img_left_icon"
                android:text="新闻类型"
                android:textColor="#333333"
                android:textSize="17sp"
                />

            <EditText
                android:id="@+id/txt_set_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_toLeftOf="@+id/img_right_icon"
                android:layout_toRightOf="@+id/txt_set_title"
                android:background="@null"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@={viewModel.typeName}"
                android:textColor="#333333"
                android:textSize="15sp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_me_save_news_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/shape_btn_blue_bg"
            android:onClick="@{() -> viewModel.addNewsType()}"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
    </LinearLayout>
</layout>